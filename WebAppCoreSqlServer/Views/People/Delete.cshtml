@model Models.People
@{
    ViewData["Title"] = "Excluir";
}
<h3>Deseja excluir esse registro?</h3>
<hr />
<h4>Pessoa</h4>
<hr />
<div>    
    <dl class="dl-horizontal">
        <dt>
            Código:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            Nome:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Criado em:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt>
            Status:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Active)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Excluir?" onclick="if (!confirm('Deseja excluir?')) {return false;}" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-default">« Voltar</a>
    </form>
</div>
